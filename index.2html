<!-- PLUS BUTTON (placed in DOM so scripts can reliably find it) -->
<button id="plusBtn" title="Add CII Image">+</button>

<!-- Overlay & PANEL -->
<div id="ciiOverlay"></div>
<div id="ciiPanel" aria-hidden="true">
    <div style="display:flex;justify-content:space-between;align-items:center;margin-bottom:8px">
        <strong style="font-size:16px">Add Image</strong>
        <button id="closePanel" style="background:#222;border:none;padding:6px 10px;border-radius:8px;color:#fff;cursor:pointer">Close</button>
    </div>
    <div class="panelBody" style="flex:1 1 auto">
        <input id="titleInput" placeholder="Title" style="padding:10px;width:100%;margin:6px 0;border-radius:8px;border:1px solid #333;background:#0b0b0b;color:#fff">
        <input type="file" id="fileInput" accept="image/*" style="margin:8px 0;">
        <div style="margin-top:10px">
            <button id="postBtn" style="padding:10px 12px;border-radius:8px;border:none;cursor:pointer;background:var(--orange);color:#000;font-weight:700;width:100%">Save</button>
        </div>

        <hr style="margin:14px 0;border-color:#222">

        <h4 style="margin:0;color:#ffb07a;font-size:13px">Danger Zone</h4>

        <!-- PHASE2: Danger hold element - press & hold 5s to activate selection mode -->
        <div id="dangerHold" class="danger-hold" role="button" aria-pressed="false" tabindex="0">
            <div class="label">Press & hold 5s to ENTER Delete Selection Mode</div>
            <div style="font-size:12px;opacity:0.8">Hold intentionally — tap will not activate</div>
            <div class="danger-progress" aria-hidden="true"><div class="bar" id="dangerBar"></div></div>
        </div>

        <div id="deleteList"></div>
    </div>
</div>

<script>
    // -----------------------------
    // Core navigation + plus toggle
    // -----------------------------
    let historyStack = ['home'];

    function openPage(id) {
        if(id === "billHistory") loadBills();
        if(id === "billGen") {
            document.getElementById('billDate').innerText = new Date().toLocaleDateString();
            document.getElementById('billID').innerText = Math.floor(1000 + Math.random() * 9000);
        }

        document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
        const dest = document.getElementById(id);
        if (dest) dest.classList.add('active');

        // Show/hide back button
        document.getElementById('backBtn').style.display = (id === 'home') ? 'none' : 'block';
        historyStack.push(id);
        window.scrollTo(0, 0);

        // ensure plus visibility toggled reliably
        togglePlus();
    }

    function back() {
        if (historyStack.length > 1) {
            historyStack.pop();
            let id = historyStack[historyStack.length - 1];
            document.querySelectorAll('.screen').forEach(s => s.classList.remove('active'));
            document.getElementById(id).classList.add('active');
            document.getElementById('backBtn').style.display = (id === 'home') ? 'none' : 'block';
            togglePlus();
        }
    }

    function togglePlus() {
        const plus = document.getElementById('plusBtn');
        const cii = document.getElementById('cii');
        if (!plus || !cii) return;
        // plus should show only when CII active on screen
        const show = cii.classList.contains('active');
        plus.style.display = show ? 'flex' : 'none';
    }

    /* Password Protection Logic */
    function checkPassword(page){
        let pass = prompt("Enter Password to access CII");
        if(pass === "PJ-ECC dashboard*432Hz"){
            openPage(page);
            // call loadGallery after opening to ensure dynamic content loads
            setTimeout(()=>{ if(typeof loadGallery === 'function') loadGallery(); }, 200);
        } else if(pass !== null){
            alert("Access Denied: Wrong Password");
        }
    }

    /* Polish Rate Logic & bill functions (unchanged) */
    function getRate(inch){
        inch = parseFloat(inch) || 0;
        if(inch < 10 && inch > 0) return 15;
        if(inch <= 15.5) return 20;
        if(inch <= 20) return 40;
        if(inch <= 26) return 45;
        if(inch <= 30) return 50;
        if(inch > 30) return 60;
        return 0;
    }

    function addBillRow(){
        const container = document.getElementById("billItems");
        let row = document.createElement("div");
        row.className = "billRow";
        row.innerHTML = `
            Qty <input type="number" value="1" class="qty" style="width:50px"> 
            Inch <input type="number" class="inch" style="width:70px"> 
            Rate ₹<span class="rate">0</span>
            <button onclick="this.parentElement.remove(); updateBillTotal();" style="float:right;background:none;border:none;color:red;font-weight:bold">X</button>
        `;
        container.appendChild(row);

        row.querySelector(".qty").addEventListener("input", updateBillTotal);
        row.querySelector(".inch").addEventListener("input", updateBillTotal);
    }

    function updateBillTotal(){
        let total = 0;
        document.querySelectorAll(".billRow").forEach(row => {
            let qty = parseFloat(row.querySelector(".qty").value) || 0;
            let inch = parseFloat(row.querySelector(".inch").value) || 0;
            let r = getRate(inch);
            row.querySelector(".rate").innerText = r;
            total += qty * r;
        });
        document.getElementById("billTotal").innerText = total;
    }

    function downloadBill(){
        const bill = document.getElementById("billArea");
        const total = document.getElementById("billTotal").innerText;
        if(total == "0") return alert("Please add items first!");

        html2canvas(bill, { scale: 2 }).then(canvas => {
            let link = document.createElement("a");
            link.download = "PJ-Official-Bill-" + Date.now() + ".png";
            link.href = canvas.toDataURL();
            link.click();

            saveBill({
                date: new Date().toLocaleString(),
                worker: document.getElementById("worker").value || "General",
                total: total
            });

            // Reset after download
            setTimeout(() => {
                document.getElementById("billItems").innerHTML = "";
                document.getElementById("billTotal").innerText = "0";
                document.getElementById("worker").value = "";
            }, 500);
        });
    }

    function saveBill(data){
        let bills = JSON.parse(localStorage.getItem("pjBills") || "[]");
        bills.push(data);
        localStorage.setItem("pjBills", JSON.stringify(bills));
    }

    function loadBills(){
        let list = document.getElementById("historyList");
        list.innerHTML = "";
        let bills = JSON.parse(localStorage.getItem("pjBills") || "[]");

        if(bills.length === 0){
            list.innerHTML = "<div class='card'>No Saved Bills found.</div>";
            return;
        }

        bills.reverse().forEach((b, i) => {
            let div = document.createElement("div");
            div.className = "card";
            div.style.borderLeft = "5px solid var(--orange)";
            div.innerHTML = `
                <div style="font-size:12px;opacity:0.7">${b.date}</div>
                <div style="margin:5px 0"><b>Worker:</b> ${b.worker}</div>
                <div style="color:var(--orange);font-weight:bold;font-size:18px">Total: ₹${b.total}</div>
                <button onclick="deleteBill(${bills.length-1-i})" style="margin-top:10px;background:#ff0000;color:white;border:none;padding:5px 10px;border-radius:4px;font-size:10px;cursor:pointer">Delete Record</button>
            `;
            list.appendChild(div);
        });
    }

    function deleteBill(index){
        if(!confirm("Delete this bill record?")) return;
        let bills = JSON.parse(localStorage.getItem("pjBills") || "[]");
        bills.splice(index, 1);
        localStorage.setItem("pjBills", JSON.stringify(bills));
        loadBills();
    }

    function calculatePolish() {
        const input = document.getElementById('lengthInput').value;
        const resultDiv = document.getElementById('calcResult');
        const lengths = input.split(/[\s,]+/).filter(x => x.trim() !== "").map(Number);

        if (lengths.length === 0) { resultDiv.style.display = 'none'; return; }

        let total = 0;
        let html = '<div style="font-weight:600; margin-bottom:10px;">Polish Summary:</div>';

        lengths.forEach((len, index) => {
            let rate = getRate(len);
            total += rate;
            html += `<div style="display:flex;justify-content:space-between;font-size:14px;margin-bottom:5px;opacity:0.8"><span>#${index + 1} (${len}")</span><span>₹${rate}</span></div>`;
        });

        html += `<div style="margin-top:15px;padding:12px;background:var(--orange-dim);border-radius:8px;color:var(--orange);font-weight:700;text-align:center;font-size:18px">Total: ₹${total}</div>`;

        resultDiv.innerHTML = html;
        resultDiv.style.display = 'block';
    }


    // -----------------------------
    // PHASE 1: UI State Machine
    // -----------------------------
    /* We set up CII_MODE variable and helper to update UI.
       Modes:
         - view (default)
         - danger_hold (panel shows danger hold control)
         - select (entered after hold completed)
         - ... (other modes reserved for later phases)
    */
    const CII_MODES = {
        VIEW: 'view',
        DANGER_HOLD: 'danger_hold',
        SELECT: 'select',
        // reserved: reason, otp, questions, final_confirm, deleting
    };
    let CII_MODE = CII_MODES.VIEW;

    function setCiiMode(mode) {
        CII_MODE = mode;
        updateCiiUI();
    }

    function updateCiiUI() {
        const banner = document.getElementById('selectionBanner');
        const plus = document.getElementById('plusBtn');
        // Show banner only when in SELECT mode
        if (CII_MODE === CII_MODES.SELECT) {
            if (banner) banner.style.display = 'block';
            // plus turns into continue / or stays; for now keep visible
            if (plus) { plus.innerText = '→'; plus.title = 'Continue with selection'; }
        } else {
            if (banner) banner.style.display = 'none';
            if (plus) { plus.innerText = '+'; plus.title = 'Add CII Image'; }
        }
        // other visuals can be updated later
    }

    // -----------------------------
    // PHASE 2: Danger Zone Hold
    // -----------------------------
    (function setupDangerHold() {
        const dangerEl = document.getElementById('dangerHold');
        const dangerBar = document.getElementById('dangerBar');
        const HOLD_MS = 5000; // 5 seconds
        let holdTimer = null;
        let startTime = 0;
        let rafId = null;

        if (!dangerEl || !dangerBar) return;

        function setProgress(percent) {
            dangerBar.style.width = Math.max(0, Math.min(100, percent)) + '%';
        }

        function startHold() {
            // if already in select, do nothing
            if (CII_MODE === CII_MODES.SELECT) return;
            startTime = Date.now();
            setProgress(0);
            // small hint vibration to show start (if supported)
            if (navigator.vibrate) navigator.vibrate(30);
            // animate progress using rAF
            function tick() {
                const elapsed = Date.now() - startTime;
                const p = (elapsed / HOLD_MS) * 100;
                setProgress(p);
                if (elapsed >= HOLD_MS) {
                    completeHold();
                    return;
                }
                rafId = requestAnimationFrame(tick);
            }
            rafId = requestAnimationFrame(tick);
            // safety timer
            holdTimer = setTimeout(() => { /* handled in tick */ }, HOLD_MS + 50);
            dangerEl.setAttribute('aria-pressed', 'true');
        }

        function cancelHold() {
            if (rafId) cancelAnimationFrame(rafId);
            rafId = null;
            if (holdTimer) { clearTimeout(holdTimer); holdTimer = null; }
            setProgress(0);
            dangerEl.setAttribute('aria-pressed', 'false');
        }

        function completeHold() {
            cancelHold();
            // vibrate success
            if (navigator.vibrate) navigator.vibrate([40,20,40]);
            // set mode to select (PHASE 1 transition)
            setCiiMode(CII_MODES.SELECT);
            // close panel to reveal selection banner & gallery (optional)
            if (typeof panelHide === 'function') panelHide();
            // show a small toast / alert to confirm
            setTimeout(()=> {
                // brief visual feedback
                const b = document.getElementById('selectionBanner');
                if (b) {
                    b.innerText = 'Selection Mode Active — Tap items to select (phase 3 will add checkboxes)';
                    b.style.display = 'block';
                    setTimeout(()=> {
                        // keep banner until user navigates; do not auto-hide here
                    }, 2000);
                }
            }, 200);
        }

        // pointer events (works with mouse & touch)
        let pointerDown = false;
        dangerEl.addEventListener('pointerdown', (e) => {
            e.preventDefault();
            pointerDown = true;
            startHold();
        }, {passive:false});
        // cancel on move/leave/up/cancel
        dangerEl.addEventListener('pointerup', (e) => {
            pointerDown = false;
            // if already completed, nothing; else cancel
            if (CII_MODE !== CII_MODES.SELECT) cancelHold();
        });
        dangerEl.addEventListener('pointercancel', (e) => { pointerDown = false; cancelHold(); });
        dangerEl.addEventListener('pointerleave', (e) => { if (pointerDown) { pointerDown=false; cancelHold(); } });

        // allow keyboard activation for accessibility (Space or Enter)
        dangerEl.addEventListener('keydown', (e) => {
            if (e.key === ' ' || e.key === 'Enter') {
                e.preventDefault();
                if (CII_MODE !== CII_MODES.SELECT) startHold();
            }
        });
        dangerEl.addEventListener('keyup', (e) => {
            if (e.key === ' ' || e.key === 'Enter') {
                if (CII_MODE !== CII_MODES.SELECT) cancelHold();
            }
        });
    })();

    // -----------------------------
    // Panel + plus button wiring (existing)
    // -----------------------------
    const plusBtn = document.getElementById('plusBtn');
    const overlay = document.getElementById('ciiOverlay');
    const panel = document.getElementById('ciiPanel');
    const closePanelBtn = document.getElementById('closePanel');

    function panelShow() {
        overlay.style.display = 'block';
        setTimeout(()=> overlay.style.opacity = '1', 10);
        panel.classList.add('show');
        panel.setAttribute('aria-hidden','false');
        // reset danger bar if needed
        const db = document.getElementById('dangerBar'); if (db) db.style.width = '0%';
    }
    function panelHide() {
        panel.classList.remove('show');
        panel.setAttribute('aria-hidden','true');
        overlay.style.opacity = '0';
        setTimeout(()=> overlay.style.display = 'none', 240);
    }

    overlay.addEventListener('click', panelHide);
    if (closePanelBtn) closePanelBtn.addEventListener('click', panelHide);

    if (plusBtn) plusBtn.addEventListener('click', () => {
        panelShow();
    });

    // initial toggle on load
    window.addEventListener('load', () => {
        togglePlus();
        updateCiiUI();
    });

    // ensure togglePlus also runs on DOM changes (robust)
    const mo = new MutationObserver(togglePlus);
    mo.observe(document.body, { attributes: true, subtree: true, childList: true });

</script>


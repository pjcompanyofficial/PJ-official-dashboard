    <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300;400;600;700&display=swap" rel="stylesheet">
    <!-- html2canvas for Bill Image Generation (kept once) -->
    <script src="https://cdnjs.cloudflare.com/ajax/libs/html2canvas/1.4.1/html2canvas.min.js"></script>
    <style>
        :root {
            --black: #0a0a0a;
            --dark-grey: #121212;
            --orange: #ff7a00;
            --orange-dim: rgba(255, 122, 0, 0.15);
            --border: #222;
            --text-main: #ffffff;
            --text-dim: #aaa;
        }
        body {
            margin: 0;
            font-family: 'Poppins', sans-serif;
            background: var(--black);
            color: var(--text-main);
            overflow-x: hidden;
            -webkit-tap-highlight-color: transparent;
        }

        /* Circular Watermark Background */
        body::before {
            content: "";
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            width: 300px;
            height: 300px;
            background: url('https://i.postimg.cc/0QHnqDC4/1771519114070.jpg') center/cover no-repeat;
            opacity: .07;
            z-index: -1;
            pointer-events: none;
            border-radius: 50%;
            filter: grayscale(100%);
        }

        header {
            padding: 20px;
            text-align: center;
            font-size: 24px;
            font-weight: 700;
            letter-spacing: 1px;
            background: rgba(0,0,0,0.8);
            backdrop-filter: blur(10px);
            border-bottom: 1px solid var(--border);
            position: sticky;
            top: 0;
            z-index: 100;
        }

        .screen {
            display: none;
            padding: 20px;
            max-width: 600px;
            margin: 0 auto;
            animation: slideIn 0.4s cubic-bezier(0.2, 0.8, 0.2, 1);
        }

        .active { display: block; }

        @keyframes slideIn {
            from { opacity: 0; transform: translateY(15px); }
            to { opacity: 1; transform: translateY(0); }
        }

        .menu-btn {
            background: linear-gradient(145deg, #181818, #0a0a0a);
            border: 1px solid var(--border);
            padding: 18px;
            margin: 12px 0;
            border-radius: 16px;
            font-size: 16px;
            font-weight: 500;
            cursor: pointer;
            transition: all 0.3s ease;
            display: flex;
            align-items: center;
            justify-content: space-between;
            text-decoration: none;
            color: white;
        }

        .menu-btn:active {
            transform: scale(0.98);
            border-color: var(--orange);
        }

        .menu-btn::after {
            content: '→';
            color: var(--orange);
            font-weight: 700;
        }

        .back {
            position: absolute;
            left: 20px;
            top: 20px;
            font-size: 24px;
            cursor: pointer;
            color: var(--orange);
            z-index: 101;
        }

        .title {
            text-align: center;
            font-size: 20px;
            margin: 10px 0 25px 0;
            font-weight: 600;
            color: var(--orange);
            text-transform: uppercase;
            letter-spacing: 1px;
        }

        .card {
            background: var(--dark-grey);
            padding: 16px 20px;
            border-radius: 12px;
            margin: 15px 0;
            border: 1px solid #1f1f1f;
        }

        .card.flex {
            display: flex;
            justify-content: space-between;
            align-items: center;
        }

        .card span:last-child {
            font-weight: 700;
            color: var(--orange);
        }

        /* Calculator Styles */
        .calc-container {
            background: var(--dark-grey);
            border-radius: 20px;
            padding: 20px;
            border: 1px solid var(--border);
        }

        input {
            width: 100%;
            padding: 15px;
            background: #000;
            border: 1px solid var(--border);
            border-radius: 12px;
            color: white;
            font-family: inherit;
            font-size: 16px;
            box-sizing: border-box;
            margin-bottom: 15px;
        }

        input:focus { outline: none; border-color: var(--orange); }

        .action-btn {
            background: var(--orange);
            color: black;
            border: none;
            padding: 15px;
            border-radius: 12px;
            width: 100%;
            font-weight: 700;
            font-size: 16px;
            cursor: pointer;
            text-transform: uppercase;
            margin: 10px 0;
        }

        /* Bill System UI */
        .bill-box {
            background: #fff;
            color: #000;
            padding: 20px;
            border-radius: 8px;
            position: relative;
            overflow: hidden;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }

        .bill-box::before {
            content: "";
            position: absolute;
            top: 50%; left: 50%;
            transform: translate(-50%, -50%);
            width: 70%; height: 70%;
            background: url('https://i.postimg.cc/L8vWhY4Y/Screenshot-20260221-204626-Photos-and-videos.png') center/contain no-repeat;
            opacity: 0.12;
            pointer-events: none;
        }

        .billRow { margin-bottom: 10px; position: relative; padding: 10px; background: #f9f9f9; border-radius: 8px; border-left: 4px solid var(--orange); }
        .billRow input { background: #fff; color: #000; border: 1px solid #ccc; margin-bottom: 5px; padding: 10px; font-size: 14px; }
        .billRow hr { border: 0; border-top: 1px solid #eee; margin: 10px 0; }

        /* CII Page Styles */
        .imgBox { margin: 25px 0; text-align: center; position: relative; }
        .imgBox img { max-width: 100%; border-radius: 14px; border: 1px solid #333; margin-bottom: 12px; transition: transform 0.3s ease; }
        .imgBox img:hover { transform: scale(1.02); }
        .preview { width:100%; border-radius:12px; margin-top:10px; box-shadow:0 0 10px rgba(0,0,0,0.2); }
        .download-btn { margin-top:10px; padding:12px 18px; border:none; background:linear-gradient(45deg,#ff7a00,#ff9a00); color:white; border-radius:8px; font-weight:bold; cursor:pointer; width: 100%; }

        /* Floating Approval Animation */
        .float-box { position: fixed; right: 15px; bottom: 20px; width: 80px; text-align: center; }
        .circle { width: 60px; height: 60px; border-radius: 50%; overflow: hidden; border: 2px solid var(--orange); position: absolute; right: -120px; background: #000; animation: slide 12s infinite; }
        .circle img { width: 100%; height: 100%; object-fit: cover; }
        .circle:nth-child(1) { animation-delay: 0s }
        .circle:nth-child(2) { animation-delay: 2.4s }
        .circle:nth-child(3) { animation-delay: 4.8s }
        .circle:nth-child(4) { animation-delay: 7.2s }
        .circle:nth-child(5) { animation-delay: 9.6s }

        @keyframes slide {
            0% { right: -120px; opacity: 0; transform: scale(0.5); }
            5% { right: 0; opacity: 1; transform: scale(1); }
            15% { right: 0; opacity: 1; transform: scale(1); }
            20% { right: -120px; opacity: 0; transform: scale(0.5); }
            100% { right: -120px; opacity: 0; }
        }

        .approve-text { font-size: 9px; color: var(--text-dim); margin-top: 70px; line-height: 1.2; }
        .badge { font-size: 10px; background: var(--orange); color: black; padding: 2px 6px; border-radius: 4px; font-weight: 700; margin-left: 10px; }

        /* PLUS BUTTON (CII) - updated to official orange circle, smaller */
        #plusBtn {
            position: fixed;
            top: 16px;
            right: 16px;
            width: 48px;
            height: 48px;
            border-radius: 50%;
            border: none;
            background: var(--orange);
            color: #000;
            font-size: 26px;
            font-weight: 800;
            display: none; /* shown only when CII active */
            z-index: 10002;
            box-shadow: 0 8px 20px rgba(255,122,0,0.28);
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
            line-height: 1;
        }
        #plusBtn:active { transform: scale(0.96); }

        /* Bottom-sheet panel & overlay */
        #ciiOverlay {
            position: fixed;
            inset: 0;
            background: rgba(0,0,0,0.45);
            display: none;
            z-index: 10000;
            -webkit-tap-highlight-color: transparent;
        }
        #ciiPanel {
            position: fixed;
            left: 50%;
            bottom: 12px;
            transform: translateX(-50%) translateY(100%);
            opacity: 0;
            width: calc(100% - 32px);
            max-width: 420px;
            background: #111;
            padding: 16px;
            border-radius: 14px;
            box-shadow: 0 20px 40px rgba(0,0,0,0.6);
            z-index: 10001;
            transition: transform .22s ease, opacity .22s ease;
            color: #fff;
            pointer-events: none;
            max-height: 70vh;
            overflow: hidden;
            display: flex;
            flex-direction: column;
        }
        #ciiPanel.show {
            transform: translateX(-50%) translateY(0);
            opacity: 1;
            pointer-events: auto;
        }
        #ciiPanel .panelBody {
            overflow: auto;
            padding-right: 6px;
        }
        #ciiPanel input[type="file"] { width: 100%; }
        #deleteList { max-height: 180px; overflow: auto; margin-top: 10px; padding-right: 6px; }

        /* Danger hold UI (progress) */
        .danger-hold {
            background: #1a0a0a;
            border: 1px solid #3a1a1a;
            padding: 10px;
            border-radius: 10px;
            text-align: center;
            color: #ffb29a;
            margin-top: 12px;
            user-select: none;
        }
        .danger-hold .label { font-weight:700; color:#ff9a7a; margin-bottom:6px; }
        .danger-progress {
            height: 8px;
            background: rgba(255,255,255,0.05);
            border-radius: 6px;
            overflow: hidden;
            margin-top:6px;
        }
        .danger-progress .bar {
            width: 0%;
            height:100%;
            background: linear-gradient(90deg,var(--orange),#ff9a00);
            transition: width 0.12s linear;
        }

        /* selection-banner */
        #selectionBanner {
            display:none;
            position: fixed;
            left: 50%;
            transform: translateX(-50%);
            top: 78px;
            z-index: 10003;
            background: rgba(255,122,0,0.12);
            color: #fff;
            padding: 8px 14px;
            border-radius: 12px;
            border: 1px solid rgba(255,122,0,0.3);
            font-weight:700;
            backdrop-filter: blur(4px);
        }

        /* small responsive tweak */
        @media (min-width: 900px) {
            #ciiPanel { bottom: 28px; width: 380px; }
        }
    </style>
</head>

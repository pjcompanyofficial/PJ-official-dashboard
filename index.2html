        <button style="background:red;color:#fff;border:none;padding:6px 12px;border-radius:8px;margin-top:6px;cursor:pointer"
          onclick="window.del && window.del('${d.id}','${data.file}')">Delete</button><hr style="border-color:#222">`;
        deleteList.appendChild(item);
      }
    });
  } catch(err) {
    console.error("Error loading gallery:", err);
  }
}
loadGallery();

/* UPLOAD */
document.getElementById("postBtn").onclick=async()=>{
  let file=document.getElementById("fileInput").files[0];
  let title=document.getElementById("titleInput").value||"Untitled";
  if(!file) return alert("Select image");

  // visual loader (simple)
  try {
    let storageRef = ref(storage,"CII/"+Date.now()+file.name);
    await uploadBytes(storageRef,file);
    let url = await getDownloadURL(storageRef);

    await addDoc(collection(db,"cii"),{title,url,file:storageRef.fullPath});
    // clear & hide
    document.getElementById("fileInput").value = "";
    document.getElementById("titleInput").value = "";
    // reload gallery and close panel
    loadGallery();
    // close panel via DOM (panelHide defined in page script)
    if (typeof panelHide === 'function') panelHide();
  } catch(err) {
    console.error("Upload failed:", err);
    alert("Upload failed. Check console.");
  }
};

/* DELETE (with OTP via emailjs) */
window.del = async(id,file) => {
